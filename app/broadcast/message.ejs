          -->
        </div>
      </div>
    </nav>

    <div class="container-fluid">
      <div class="row">
        <div class="main">
          <a href="dashboard"><h1 class="page-header"><%=s.company.name%></h1></a>

          <h2 class="sub-header" id="titleElement">Message All Users</h2>
          
           <form id="addevent">

              <div class="form-group" onclick="changeType('message')">
                <label for="textarea_message">
                  Message Text
                </label>
                <textarea class="form-control" rows="3" placeholder="Message Text"
                 name="textarea_message" id="textarea_message"></textarea>
              </div>

              <hr>

              <div class="form-group" onclick="changeType('upcomingEvents')">
                <label for="textarea_upcomingEvents">
                  Upcoming Events with Message Text
                </label>
                <textarea class="form-control" rows="3" placeholder="Message Text"
                 name="textarea_upcomingEvents" id="textarea_upcomingEvents"></textarea>
              </div>

              <input type="button" class="btn btn-success btn-block" value="Send" onclick="send()"/>

            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="../../assets/js/vendor/jquery.min.js"><\/script>')</script>
    <script src="js/bootstrap.min.js"></script>
    <script type="text/javascript">

      $(document).ready(() => {
        init();
      });

      var type = 'message';
      var titles = {
        message: 'Message All Users',
        upcomingEvents: 'Send Events to All Users'
      }

      function init() {
        changeType(type);
      }

      function changeType(newType) {
        if (type != newType) {
          $('#type_' + type).removeClass("radioButtonSelected");
          $('#type_' + type).addClass("radioButton");
          $('#textarea' + type).attr("disabled", true);
          type = newType;
          $('#type_' + type).removeClass("radioButton");
          $('#type_' + type).addClass("radioButtonSelected");
          $('#textarea' + type).attr("disabled", false);
          $('#titleElement').fadeOut(100, () => {
            $('#titleElement').html(titles[type]);
            $('#titleElement').fadeIn(400);
          });
        }
      }

      function sendMessage(type, message) {
        console.log('sendMessage', type, message);
        $.post(window.location.href + "?type=" + type + "&message="
         + encodeURIComponent(message), (data) => {
          console.log(data);
          alert(data);
        });
      }

      function send() {
        if ($('#textarea_' + type).val().trim().length == 0) {
          alert('Message box empty');
          return;
        }
        let confirmMessage = (type == 'message') 
         ? "Are you sure you want to send this message?"
         : "Are you sure you want to send this message along with upcoming events?";
        if (confirm(confirmMessage)) {
          sendMessage(type, $('#textarea_' + type).val().trim());
        }
      }
    </script>
  </body>
</html>
