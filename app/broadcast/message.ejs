    <div class="container-fluid">
      <div class="row">
        <div class="main">
          <a href="dashboard"><h1 class="page-header"><%=s.company.name%></h1></a>

          <h2 class="sub-header">Message</h2>

          <ul class="nav nav-pills nav-justified">
            <li class="active"><a data-toggle="pill" href="#text">Text</a></li>
            <li><a data-toggle="pill" href="#allEvents">All Events</a></li>
            <li><a data-toggle="pill" href="#featuredEvent">Featured Event</a></li>
          </ul>

          <br/>

          <div class="tab-content">
            <div id="text" class="tab-pane fade in active">
              <form>
                <div class="form-group">
                  <label for="textarea_message">
                    Message Text
                  </label>
                  <textarea class="form-control" rows="3" placeholder="Message Text"
                   name="message" id="message"></textarea>
                  <br/>
                  <textarea class="form-control" rows="3" placeholder="List of Id's (Leave blank to message everyone)"
                   name="ids" id="ids"></textarea>
                </div>
                <input type="button" class="btn btn-success btn-block" value="Send" onclick="send(message)"/>
              </form>
            </div>

            <div id="allEvents" class="tab-pane fade">
              <form>
                <div class="form-group">
                  <textarea class="form-control" rows="3" placeholder="List of Id's (Leave blank to message everyone)"
                   name="ids" id="ids"></textarea>
                </div>
                <input type="button" class="btn btn-success btn-block" value="Send" onclick="send(events)"/>
              </form>
            </div>

            <div id="featuredEvent" class="tab-pane fade">
              <form>
                <div class="form-group">
                  <label for="textarea_message">
                    Subtitle
                  </label>
                  <textarea class="form-control" rows="3" placeholder="Message Text"
                   name="message" id="subtitle"></textarea>
                  <br/>
                  <textarea class="form-control" rows="3" placeholder="List of Id's (Leave blank to message everyone)"
                   name="ids" id="ids"></textarea>
                </div>
                <input type="button" class="btn btn-success btn-block" value="Send" onclick="send(featured)"/>
              </form>
            </div>
          </div>

        </div>
      </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="../../assets/js/vendor/jquery.min.js"><\/script>')</script>
    <script src="js/bootstrap.min.js"></script>
    <script type="text/javascript">

      function sendText(text, ids) {
        $.post(window.location.href
          + "?type=message"
          + "&text=" + text
          + "&ids=" + ids,
          (data) => {
            console.log(data);
            alert(data);
          });
      }

      function sendAllEvents(ids) {
        $.post(window.location.href
          + "?type=events"
          + "&ids=" + ids,
          (data) => {
            console.log(data);
            alert(data);
          });
      }

      function sendFeaturedEvent(text, eid, ids) {
        $.post(window.location.href
          + "?type=featured"
          + "&eid" + eid
          + "&text=" + text
          + "&ids=" + ids,
          (data) => {
            console.log(data);
            alert(data);
          });
      }

      function send(type) {
        if (confirm("Are you sure you want to send this message?")) {
          var ids = $('#ids').val().trim();
          switch(type){
            case "message":
            sendMessage($('#message').val().trim(), ids);
            break;

            case "events":
            sendAllEvents(ids);
            break;

            case "featured":
            sendFeaturedEvent($('#subtitle').val().trim(), ids)
          }


        }
      }
    </script>
  </body>
</html>
