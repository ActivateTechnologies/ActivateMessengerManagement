    <script>

      let dayLabels = ["Mo", "Tu", "We", "Th", "Fr", "Sa", "Su"];
      let monthLabels = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul',
       'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];
      let weekLabels = [];
      let modifiedMonthLabels = [];
      $(document).ready(() => {
        initMonthAndWeekLabels();
        $.get('/dashboardData?requiredData=getTicketsSoldOverTime',
         (data, status) => {
          console.log('getTicketsSoldOverTime', data);
          initChart('ticketsSoldDay', data.daysArray, dayLabels, "rgb(255, 206, 86)", "rgb(255, 206, 86)", "rgb(255, 206, 86)", "rgb(255, 206, 86)");
          initChart('ticketsSoldWeek', data.weeksArray, weekLabels, "rgb(255, 206, 86)", "rgb(255, 206, 86)", "rgb(255, 206, 86)", "rgb(255, 206, 86)");
          initChart('ticketsSoldMonth', data.monthsArray, modifiedMonthLabels, "rgb(255, 206, 86)", "rgb(255, 206, 86)", "rgb(255, 206, 86)", "rgb(255, 206, 86)");
        });
        $.get('/dashboardData?requiredData=getNewMembersOverTime',
         (data, status) => {
          console.log('getNewMembersOverTime', data);
          initChart('newMembersDay', data.daysArray, dayLabels, "rgb(54, 162, 235)", "rgb(54, 162, 235)", "rgb(54, 162, 235)", "rgb(54, 162, 235)");
          initChart('newMembersWeek', data.weeksArray, weekLabels, "rgb(54, 162, 235)", "rgb(54, 162, 235)", "rgb(54, 162, 235)", "rgb(54, 162, 235)");
          initChart('newMembersMonth', data.monthsArray, modifiedMonthLabels, "rgb(54, 162, 235)", "rgb(54, 162, 235)", "rgb(54, 162, 235)", "rgb(54, 162, 235)");
        });
        $.get('/dashboardData?requiredData=getButtonHitsOverTime',
         (data, status) => {
          console.log('getButtonHitsOverTime', data);
          initChart('buttonsHitsDay', data.daysArray, dayLabels, "rgb(254, 118, 122)", "rgb(54, 162, 235)", "rgb(54, 162, 235)", "rgb(54, 162, 235)");
          initChart('buttonsHitsWeek', data.weeksArray, weekLabels, "rgb(254, 118, 122)", "rgb(54, 162, 235)", "rgb(54, 162, 235)", "rgb(54, 162, 235)");
          initChart('buttonsHitsMonth', data.monthsArray, modifiedMonthLabels, "rgb(254, 118, 122)", "rgb(54, 162, 235)", "rgb(54, 162, 235)", "rgb(54, 162, 235)");
        });
      });

      function initChart (divId, data, labels, backgroundColor,
        borderColor, highlightFill, highlightStroke) {
        let ctx = document.getElementById(divId).getContext("2d");
        let chartData = {
          labels: labels,
          datasets: [{
            backgroundColor: backgroundColor,
            borderColor: borderColor,
            highlightFill: highlightFill,
            highlightStroke: highlightStroke,
            data: data
          }]
        };
        new Chart(ctx, {
          type: 'bar',
          data: chartData, 
          options: {
            legend: {
              display: false,
            },
            scales: {
              xAxes: [{
                gridLines: {
                  display: false
                }
              }],
              yAxes: [{
                gridLines: {
                  display: false
                }
              }]
            }
          }
        }); 
      }

      function initMonthAndWeekLabels () {
        //Month Labels
        let currentMonth = (new Date()).getMonth();
        for (let i = currentMonth + 1; modifiedMonthLabels.length < 12; i++) {
          modifiedMonthLabels.push(monthLabels[i]);
          if (i == 11) {
            i = -1;
          }
        }
        //Week Labels
        let msDay = 86400 * 1000;
        let firstMonday = new Date(); //Now
        firstMonday = new Date(firstMonday.getTime() //This week's Monday
          - (firstMonday.getDay() - 1) * msDay);
        firstMonday = new  Date(firstMonday.getTime() - 11 * 7 * msDay);
        for (let i = 0; i < 12; i++) {
          let mon = new Date(firstMonday.getTime() + i * 7 * msDay);
          let sun = new Date(mon.getTime() + 6 * msDay);
          weekLabels.push(mon.getDate() + '/' + (mon.getMonth() + 1)
            + ' - ' + sun.getDate() + '/' + (sun.getMonth() + 1));
        }
      }

    </script>
