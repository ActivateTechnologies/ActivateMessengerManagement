    <style>
      a {
        text-shadow: none;
      }
    </style>
  </head>
  <body>
    <script src="js/config.js"></script>
    <script>

      function getParameterByName(name, url) {
        if (!url) url = window.location.href;
        name = name.replace(/[\[\]]/g, "\\$&");
        var regex = new RegExp("[?&]" + name + "(=([^&#]*)|&|#|$)"),
          results = regex.exec(url);
        if (!results) return null;
        if (!results[2]) return '';
        return decodeURIComponent(results[2].replace(/\+/g, " "));
      }

      $(document).ready(function(){
        $('#pnform').submit(function(e){
          e.preventDefault();
          var pn = $('#phoneNumber').val();
          $.post( ROOT_URL + "/register?mid=" + getParameterByName('mid') + "&pn=" + pn, function( data ) {
            console.log("registered");
            location.href = "http://m.me/kickaboutapp";
          });
        })
      })

    </script>

    <div class="site-wrapper-payment">
      <div class="site-wrapper-inner2">
        <div class="cover-container2">

          <div class="inner cover">
            <img src="img/logoUnbinded-white.png" class="logoLead-payment"><br/>
            <form id="pnform">
              <div class="input-field">
                <input placeholder="Phone Number" id="phoneNumber" type="text" class="validate">
              </div>
              <input type="submit" class="btn" />
            </form>
          </div>

          <div class="footerDiv">
            <p class="footertext">
              Activate Technologies Ltd, Gordon House, 29 Gordon Square, London, WC1H 0PP
              <br>www.activatetechnologies.co.uk
            </p>
          </div>

        </div>
      </div>
    </div>
  </body>
