<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Input Games</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/css/materialize.min.css">
    <link rel="stylesheet" href="css/input.css">

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/js/materialize.min.js"></script>


  </head>
  <body>

    <div class="container">
      <h2>Input Games</h2>

      <div class="card">
        <form id="addgame" method="POST" action="/input" enctype="multipart/form-data">

          <h5>Add a game</h5>
          <div class="input-field">
            <input name="title" type="text" class="validate" required>
            <label for="title">Name</label>
          </div>
          <div class="input-field">
            <input name="address" type="text" class="validate" required>
            <label for="address">Address</label>
          </div>
          <div class="input-field">
            <input type="file" name="image" id="image" required>
          </div>
          <div class="input-field">
            <input name="latlong" type="text" class="validate" required>
            <label for="latlong">Latitude & Longitude (latitude,longitude)</label>
          </div>
          <div class="input-field">
            <input name="when" type="date" class="validate" required>
          </div>
          <div class="input-field">
            <input name="desc" type="text" class="validate" required>
            <label for="desc">Description</label>
          </div>
          <div class="input-field">
            <input name="capacity" type="text" class="validate" required>
            <label for="capacity">Capacity</label>
          </div>
          <div class="input-field">
            <input name="price" type="text" class="validate" required>
            <label for="price">Price (0 for free)</label>
          </div>
          <div class="input-field">
            <input name="id" type="text" class="validate">
            <label for="id">Id (only for editing the event)</label>
          </div>

          <input type="submit" class="btn" value="Submit"/>

        </form>
      </div>
    </div>

    <div class="current container">
      <h2>Current Games</h2>
      <div id="today">
        <h4>Today</h4>

      </div>
      <div id="tomorrow">
        <h4>Tomorrow</h4>

      </div>
      <div id="soon">
        <h4>Soon</h4>

      </div>
    </div>

    <script type="text/javascript">

      var getCard = function(item){


        var data = '<div class="card">'
                + "<span class='card-title'>" + item.name + "</span>"
                + "<p>" + "<b>Address: </b>" + item.address + "</p>"
                + "<p>" + "<b>Image Link: </b>" + item.image_url + "</p>"
                + "<p>" + "<b>Lat, Long: </b>" + item.latlong + "</p>"
                + "<p>" + "<b>When: </b>" + item.when.substring(8, 10) + "/" + item.when.substring(5,7) + "/" + item.when.substring(0, 4) + "</p>"
                + "<p>" + "<b>Joined: </b>" + item.joiners + "</p>"
                + "<p>" + "<b>Capacity: </b>" + item.capacity + "</p>"
                + "<p>" + "<b>Priee: </b>Â£" + (Math.round(item.price*100)/100).toFixed(2) + "</p>"
                + "<p>" + "<b>Shareable Link: </b>" + "https://kickabouttest.herokuapp.com/game?gid="+ item._id + "</p>"
                + "<p>" + "<b>id: </b>" + item._id + "</p>"
                + '</div>'
        return data;
      }

      $(document).ready(function(){
        $.get('/today', function(data, status){
          data.forEach(function(item){
            var data = getCard(item);
            $('#today').append(data);
          })
        })

        $.get('/tomorrow', function(data, status){
          data.forEach(function(item){
            var data = getCard(item);
            $('#tomorrow').append(data);
          })
        })

        $.get('/soon', function(data, status){
          data.forEach(function(item){
            var data = getCard(item);
            $('#soon').append(data);
          })
        })
      })

      // $("#addgame").submit(function(event){
      //   event.preventDefault();
      //   Materialize.toast('Game added', 4000);
      // });

    </script>

  </body>
</html>
