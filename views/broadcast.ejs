<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Broadcast</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/css/materialize.min.css">
    <link rel="stylesheet" href="css/broadcast.css" media="screen" title="no title" charset="utf-8">

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/js/materialize.min.js"></script>

    <style media="screen">

    
    </style>
  </head>
  <body onload="init()">
    <div class="container">
      <h1>Broadcast</h1>

      <form>
      <p>Enter the messaged to send to all registered bot users:</p>
      <table>
        <tr>
          <td>
            <span id="type_message">o</span>
          </td>
          <td>
            <textarea name="textarea_message" id="textarea_message"></textarea>
          </td>
        </tr>
        <tr>
          <td>
            <span id="type_upcomingGames">o</span>
          </td>
          <td>
            Send upcoming games
          </td>
        </tr>

      </table>
      </form>

    </div>

    <script type="text/javascript">

    var type = 'message';

    function init() {
      changeType(type);
    }

    function changeType(newType) {
      $('#type_' + type).css("font-weight", "normal");
      type = newType;
      $('#type_' + type).css("font-weight", "bold");
    }

    </script>
  </body>
</html>
