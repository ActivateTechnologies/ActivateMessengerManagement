    <script>

      let events = {};

      var getCard = function(event) {

        let dateString = event.when.substring(8, 10) 
          + "/" + event.when.substring(5,7) + "/" + event.when.substring(2, 4);
        let timeString = event.when.substring(11, 16);
        let priceString = (event.price == 0) ? 'Free'
          : 'Â£' + event.price.toFixed(2);

        let data = 
        '<div class="col-xs-6 col-sm-3">'
          + '<div class="eventCard">'
            + '<img src="' + event.image_url + '" class="eventPic">'
            + '<p class="eventtitle">' + event.name + '</p>'
            + '<p class="eventaddress">'
              + event.address
            + '</p>'
          + '</div>'
          + '<p class="sold">Sold: ' + event.joined.length 
            + '/' + event.capacity + '</p>'
          + '<table class="table table-bordered table-striped"> '
            + '<colgroup> '
              + '<tbody><tr> '
                + '<th scope=row>Coordinates</th> '
                + '<td>' + event.latlong + '</td> '
              + '</tr><tr> '
                + '<th scope=row>Date</th>'
                + '<td>' + dateString + '</td>'
              + '</tr><tr> '
                + '<th scope=row>Time</th>'
                + '<td>' + timeString + '</td>'
              + '</tr><tr> '
                + '<th scope=row>Capacity</th>'
                + '<td>' + event.capacity + '</td>'
              + '</tr><tr> '
                + '<th scope=row>Price</th>'
                + '<td>' + priceString + '</td> '
              + '</tr></tbody> '
            + '</table>'
          + '<p class="text-muted"">'
            + '<span onclick="editEvent(\'' + event._id + '\')">Edit</span> | '
            + '<span onclick="deleteEvent(\'' + event._id + '\')">Delete</span> | '
            + '<span onclick="duplicateEvent(\'' + event._id + '\')">Duplicate</span>'
          + '</p>'
        + '</div>';

        return data;
      }

      $(document).ready(() => {
        $.get('/pastEvents', (retrievedEvents, status) => {
          retrievedEvents.forEach((event) => {
            events[event._id] = event;
            let eventDiv = getCard(event);
            $('#eventsContainer').append(eventDiv);
          });
          if (retrievedEvents.length == 0) {
            $('#eventsContainer').append('<span>There have been no past events.</span>')
          }
        });
      });
    </script>
