  <body>
    <script src="js/config.js"></script>
    <script>

    function isAndroidFacebookApp() {
        var ua = navigator.userAgent || navigator.vendor || window.opera;
        return (
            ((ua.indexOf("FBAN") > -1) || (ua.indexOf("FBAV") > -1))
            && (ua.indexOf("Android") > -1 || ua.indexOf("android") > -1)
        );
    }

    function isIOSFacebookApp() {
        var ua = navigator.userAgent || navigator.vendor || window.opera;
        ua = ua.toLowerCase();
        return (
            ((ua.indexOf("FBAN") > -1) || (ua.indexOf("FBAV") > -1))
            && (ua.indexOf("iphone") > -1 || ua.indexOf("safari") > -1)
        );
    }

    function validatePhoneNumber(phoneNumber){
      phoneNumber = phoneNumber.replace(/\D/gm, '');
      if(phoneNumber.substring(0, 2) === "44"){
        if(phoneNumber.length === 12){
          return phoneNumber.substring(2)
        }
        else {
          return -1;
        }
      }
      else if(phoneNumber.substring(0, 4) === "0044"){
        if(phoneNumber.length === 14){
          return phoneNumber.substring(4)
        }
        else {
          return -1;
        }
      }
      else if(phoneNumber.substring(0, 1) === "0"){
        if(phoneNumber.length === 11){
          return phoneNumber.substring(1)
        }
        else {
          return -1;
        }
      }
      else if(phoneNumber.length == 10){
        return phoneNumber
      }
      else {
        return -1;
      }
    }

    function getParameterByName(name, url) {
      if (!url) url = window.location.href;
      name = name.replace(/[\[\]]/g, "\\$&");
      var regex = new RegExp("[?&]" + name + "(=([^&#]*)|&|#|$)"),
        results = regex.exec(url);
      if (!results) return null;
      if (!results[2]) return '';
      return decodeURIComponent(results[2].replace(/\+/g, " "));
    }

    $(document).ready(function(){

      if(getParameterByName('process')){
        if(isAndroidFacebookApp()){
          $('#controls').css('display', 'none');
          $('#android').css('display', 'block');
        }
        else if(isIOSFacebookApp()){
          $('#controls').css('display', 'none');
          $('#iphone').css('display', 'block');
        }
        else {
          location.href = "http://m.me/kickaboutapp";
        }
      }
      else {

        var phoneNumber = localStorage.getItem('phoneNumber');
        if(phoneNumber){
          $('#phoneNumber').val(phoneNumber);
        }

        $('#pnform').submit(function(e){
          e.preventDefault();
          var pn = $('#phoneNumber').val();
          pn = validatePhoneNumber(pn);
          if(pn === -1){
            $('#warning').css('display', 'block')
          }
          else {
            localStorage.setItem('phoneNumber', pn);
            $.post( ROOT_URL + "/check?pn=" + pn + "&gid=" + getParameterByName('gid'), function( data ) {
              console.log(data);
              if(data === "sent message"){
                document.getElementById('warning').innerHTML = "Check Facebook Messenger";
                $('#warning').css('display', 'block');
              }
              else {
                location.href = window.location.href + "&process=complete";
              }
            });
          }
        })

      }

    })

    </script>

    <div class="site-wrapper-payment">
      <div class="site-wrapper-inner2">
        <div class="cover-container2">

          <div id="controls" class="inner cover">
            <img src="img/logoUnbinded-white.png" class="logoLead-payment">
            <br/>
            <img src="<%= imageLink %>" class="gamePic">
            <p class="gametitlegame"><%= gameName %></p>
            <p class="gameaddress"><%= gameAddress %></p>

            <p id="text" class="title-text-useMessenger">Use Facebook Messenger to book your game:</p>
            <h3 id="warning" style="display:none">Please enter a valid phone number in this format: 07231324112</h3>

            <div class="formContainer">
              <form class="form-horizontal" id="pnform">
                <div class="input-group centre-group">
                  <div class="input-group-addon custom-width">Phone Number</div>
                  <input name="phone" autocomplete="tel" placeholder="Eg: 07231324112" id="phoneNumber" type="text" class="form-control" required>
                </div>
                <br/>
                <div class="form-group">
                  <button type="submit" class="btn btn-primary">Submit</button>
                </div>
              </form>
            </div>
          </div>






          <div id="android" style="display:none">
            <p>
              Click on the three dots and choose open in chrome
            </p>
          </div>

          <div id="iphone" style="display:none">
            <p>
              Click on Share and choose open in Safari
            </p>
          </div>




          <div class="footerDiv">
            <p class="footertext">
              Activate Technologies Ltd, Gordon House, 29 Gordon Square, London, WC1H 0PP
              <br>www.activatetechnologies.co.uk
            </p>
          </div>

        </div>
      </div>
    </div>

